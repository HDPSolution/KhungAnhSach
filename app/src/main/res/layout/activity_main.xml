<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hdpsolution.khunganhtrangsach.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgNen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/tienganh" />

        <FrameLayout
            android:id="@+id/ln1"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/camera"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margintop"
                android:background="@drawable/icon_camerax"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/galery"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margintop"
                android:background="@drawable/icon_galleryx"
                android:scaleType="fitXY" />
            <ImageButton
                android:id="@+id/togalery"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/marginleft"
                android:background="@drawable/icon_xemlaix"
                android:scaleType="fitXY" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/shareapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_more"
                android:gravity="center"
                android:text="Share"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rateapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="100dp"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_rate"
                android:gravity="center"
                android:text="Rate"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </FrameLayout>


    </RelativeLayout>

    <include layout="@layout/ads_footer" />
</LinearLayout>